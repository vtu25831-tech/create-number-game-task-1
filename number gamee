import java.util.Random;
import java.util.Scanner;

public class NumberGuessingGame {

    public static void main(String[] args) {
        final int MIN = 1;
        final int MAX = 100;
        final int MAX_ATTEMPTS = 7;

        Scanner scanner = new Scanner(System.in);
        Random random = new Random();
        int score = 0;
        int rounds = 0;
        String playAgain;

        System.out.println("ğŸ¯ Welcome to the Number Guessing Game!");

        do {
            int secretNumber = random.nextInt(MAX - MIN + 1) + MIN;
            int attemptsLeft = MAX_ATTEMPTS;
            boolean guessedCorrectly = false;

            System.out.println("\nğŸ” New Round! Guess the number between " + MIN + " and " + MAX);
            System.out.println("You have " + MAX_ATTEMPTS + " attempts.");

            while (attemptsLeft > 0) {
                System.out.print("Enter your guess: ");

                if (!scanner.hasNextInt()) {
                    System.out.println("âŒ Please enter a valid number.");
                    scanner.next(); // Clear invalid input
                    continue;
                }

                int guess = scanner.nextInt();

                if (guess < MIN || guess > MAX) {
                    System.out.println("â›” Guess out of range. Try a number between " + MIN + " and " + MAX);
                    continue;
                }

                attemptsLeft--;

                if (guess == secretNumber) {
                    System.out.println("âœ… Correct! The number was " + secretNumber + ".");
                    guessedCorrectly = true;
                    score++;
                    break;
                } else if (guess < secretNumber) {
                    System.out.println("ğŸ“‰ Too low.");
                } else {
                    System.out.println("ğŸ“ˆ Too high.");
                }

                if (attemptsLeft > 0) {
                    System.out.println("ğŸ”„ Attempts left: " + attemptsLeft);
                } else {
                    System.out.println("âŒ No attempts left. The number was " + secretNumber + ".");
                }
            }

            rounds++;
            System.out.println("ğŸ® Score: " + score + " / " + rounds);

            System.out.print("Do you want to play another round? (y/n): ");
            playAgain = scanner.next();

        } while (playAgain.equalsIgnoreCase("y"));

        System.out.println("\nğŸ Game Over! Final Score: " + score + " / " + rounds);
        System.out.println("Thanks for playing!");

        scanner.close();
    }
}



